= Slick::Rails::ApplicationViewHelper.new(self).render_carousel(options) do
  - capture_haml do
    - category.partners.published.each do |partner|
      - next if partner.logo.attachment.nil?
      %div.mx-4
        - if options[:link_to_show]
          %a{ href: cmor_partners_frontend.url_for(partner) }
            %img.w-100{ src: main_app.url_for(partner.logo.variant(variant_options)), alt: t('.alt_logo', name: partner.name.titleize) }/
        - else
          %img.w-100{ src: main_app.url_for(partner.logo.variant(variant_options)), alt: t('.alt_logo', name: partner.name.titleize) }/