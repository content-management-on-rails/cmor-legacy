= form.input :locale, collection: I18n.available_locales.map(&:to_s)
= form.input :identifier
.form-inline.mb-3
  = form.input :width
  = form.input :height

.row.mb-4
  .col-md-6
    .bg-success.p-4
      = form.input :append_item_detail_assets, as: :file, input_html: { multiple: true }
  - if form.object.item_details.any?
    .col-md-6
      .bg-danger.p-4
        = form.input :overwrite_item_detail_assets, as: :file, input_html: { multiple: true }
