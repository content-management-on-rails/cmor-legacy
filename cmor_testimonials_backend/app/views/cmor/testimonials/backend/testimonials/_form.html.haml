= form.association :category, label_method: :human
= form.input :full_name
= form.input :role
= form.input :company
= form.input :body
= form.input :position
- unless form.object.image.attached?
  = form.input :image, as: :file
- else
  .row.mb-4
    .col-md-6
      .bg-danger.p-4
        = form.input :image, as: :file
= form.input :published, as: :boolean