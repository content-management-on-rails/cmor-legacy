= form.input :locale, collection: I18n.available_locales.map(&:to_s)
= form.input :name
= form.input :description
= form.input :identifier

.row.mb-4
  .col-md-6
    .bg-success.p-4
      = form.input :append_picture_detail_assets, as: :file, input_html: { multiple: true }
  - if form.object.picture_details.any?
    .col-md-6
      .bg-danger.p-4
        = form.input :overwrite_picture_detail_assets, as: :file, input_html: { multiple: true }

= form.input :published, as: :boolean