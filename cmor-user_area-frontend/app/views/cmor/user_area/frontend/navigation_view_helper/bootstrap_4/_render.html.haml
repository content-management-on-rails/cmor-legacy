%ul.navbar-nav
  - if user_signed_in?
    .btn-group
      = link_to t('.show'), cmor_user_area_frontend.current_user_path, class: 'btn btn-secondary'
      = link_to t('.sign_out'), cmor_user_area_frontend.url_for([Cmor::UserArea::UserSession]), class: 'btn btn-primary', method: :delete
  - else
    .btn-group
      = link_to t('.sign_in'), cmor_user_area_frontend.url_for([:new, Cmor::UserArea::UserSession]), class: 'btn btn-primary'
      - if Cmor::UserArea::Configuration.enable_registrations
        = link_to t('.new'), cmor_user_area_frontend.new_current_user_path, class: 'btn btn-secondary'